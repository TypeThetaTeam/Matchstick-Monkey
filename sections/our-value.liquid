{% stylesheet %}
    /* Initial state for scroll-in */
    .value-block {
    opacity: 0;
    transform: translateY(40px);
    transition: all 1.2s ease-out; /* ðŸ‘ˆ Slower animation duration */
  }

    /* Visible state (on scroll) */
    .our-values-section--visible .value-block {
      opacity: 1;
      transform: translateY(0);
    }

    /* Staggered animation delay */
    .our-values-grid .value-block:nth-child(1) { transition-delay: 0.1s; }
    .our-values-grid .value-block:nth-child(2) { transition-delay: 0.2s; }
    .our-values-grid .value-block:nth-child(3) { transition-delay: 0.3s; }
    .our-values-grid .value-block:nth-child(4) { transition-delay: 0.4s; }
    .our-values-grid .value-block:nth-child(5) { transition-delay: 0.5s; }
    .our-values-grid .value-block:nth-child(6) { transition-delay: 0.6s; }
    .our-values-grid .value-block:nth-child(7) { transition-delay: 0.7s; }
    .our-values-grid .value-block:nth-child(8) { transition-delay: 0.8s; }

    /* Hover effect (only on desktop) */
    @media (min-width: 768px) {
      .value-block {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }


    }



          .content-div {
            background: #f5f1ec;
            padding: 0px;
        }
            .our-values-grid {
              max-width: 90%;
              margin: 0 auto;
              background: #f5f2ed;
