              }
{% endstylesheet %}

<section class="our-values-section">
  <h2 class="our-values-title">{{ section.settings.title }}</h2>
  <div class="content-div">
    <div class="our-values-grid">
      {% for block in section.blocks %}
        <div class="value-block">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 200 }}" alt="{{ block.settings.heading }}">
          {% endif %}
          <div class="value-header subheading">{{ block.settings.heading }}</div>
          <div class="value-description">{{ block.settings.description }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

