          "id": "icon",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "delivery",
              "label": "Delivery"
            },
            {
              "value": "calendar",
              "label": "Calendar"
            },
            {
              "value": "checkmark",
              "label": "Checkmark"
            },
            {
              "value": "gift",
              "label": "Gift"
            },
            {
              "value": "email",
              "label": "Email"
            },
            {
              "value": "shield",
              "label": "Shield"
            }
          ],
          "default": "checkmark",
          "label": "Icon"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image (optional)"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Feature title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "default": "<p>Describe your feature benefit here</p>",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gift Card Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "delivery",
            "title": "Instant Delivery",
            "description": "<p>Delivered via email instantly</p>"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "calendar",
            "title": "No Expiration",
            "description": "<p>Never expires, use anytime</p>"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "checkmark",
            "title": "Easy to Use",
            "description": "<p>Simple redemption process</p>"
          }
        }
      ]
    }
  ]
}
