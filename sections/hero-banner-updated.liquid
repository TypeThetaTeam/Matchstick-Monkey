{% comment %}
  Responsive Hero Banner Section
  Features: Desktop/Mobile images, flexible content positioning, full customization
{% endcomment %}

<style>
  .hero-banner-{{ section.id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    min-height: {{ section.settings.desktop_height }}px;
  }

  .hero-banner-{{ section.id }} .banner-image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero-banner-{{ section.id }} .banner-image {
    width: 100%;
    height: 100%;
    object-fit: {{ section.settings.image_fit }};
    display: block;
  }

  .hero-banner-{{ section.id }} .banner-image.mobile-image {
    display: none;
  }

  .hero-banner-{{ section.id }} .banner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    pointer-events: none;
  }

  .hero-banner-{{ section.id }} .banner-content {
    position: absolute;
    z-index: 2;
    max-width: {{ section.settings.content_max_width }}px;
    padding: {{ section.settings.content_padding_vertical }}px {{ section.settings.content_padding_horizontal }}px;
    
    {% comment %} Horizontal alignment {% endcomment %}
    {% if section.settings.content_horizontal_position == 'left' %}
      left: {{ section.settings.content_horizontal_offset }}%;
    {% elsif section.settings.content_horizontal_position == 'center' %}
      left: 50%;
      transform: translateX(-50%);
    {% elsif section.settings.content_horizontal_position == 'right' %}
      right: {{ section.settings.content_horizontal_offset }}%;
    {% endif %}
    
    {% comment %} Vertical alignment {% endcomment %}
    {% if section.settings.content_vertical_position == 'top' %}
      top: {{ section.settings.content_vertical_offset }}%;
    {% elsif section.settings.content_vertical_position == 'middle' %}
      top: 50%;
      transform: translateY(-50%);
      {% if section.settings.content_horizontal_position == 'center' %}
        transform: translate(-50%, -50%);
      {% endif %}
    {% elsif section.settings.content_vertical_position == 'bottom' %}
      bottom: {{ section.settings.content_vertical_offset }}%;
    {% endif %}
    
    text-align: {{ section.settings.text_alignment }};
    background-color: {{ section.settings.content_background_color }};
    border-radius: {{ section.settings.content_border_radius }}px;
  }

  .hero-banner-{{ section.id }} .banner-heading {
    font-size: {{ section.settings.heading_size_desktop }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
    line-height: {{ section.settings.heading_line_height }};
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
    {% if section.settings.heading_text_transform != 'none' %}
      text-transform: {{ section.settings.heading_text_transform }};
    {% endif %}
  }

  .hero-banner-{{ section.id }} .banner-subheading {
    font-size: {{ section.settings.subheading_size_desktop }}px;
    font-weight: {{ section.settings.subheading_weight }};
    color: {{ section.settings.subheading_color }};
    margin: 0 0 {{ section.settings.description_margin_bottom }}px 0;
    line-height: {{ section.settings.subheading_line_height }};
    max-width: {{ section.settings.description_max_width }}px;
    {% if section.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  .hero-banner-{{ section.id }} .banner-description {
    font-size: {{ section.settings.description_size_desktop }}px;
    color: {{ section.settings.description_color }};
    margin: 0 0 {{ section.settings.description_margin_bottom }}px 0;
    line-height: {{ section.settings.description_line_height }};
    max-width: {{ section.settings.description_max_width }}px;
    {% if section.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  .hero-banner-{{ section.id }} .banner-button {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    transition: all 0.3s ease;
    cursor: pointer;
    {% if section.settings.button_text_transform != 'none' %}
      text-transform: {{ section.settings.button_text_transform }};
    {% endif %}
    letter-spacing: {{ section.settings.button_letter_spacing }}px;
  }

  .hero-banner-{{ section.id }} .banner-button:hover {
    background-color: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
    transform: {{ section.settings.button_hover_effect }};
  }

  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    .hero-banner-{{ section.id }} {
      min-height: {{ section.settings.mobile_height }}px;
    }

    .hero-banner-{{ section.id }} .banner-image.desktop-image {
      display: none;
    }

    .hero-banner-{{ section.id }} .banner-image.mobile-image {
      display: block;
    }

    .hero-banner-{{ section.id }} .banner-content {
      width: {{ section.settings.mobile_content_max_width }}%;
      padding: {{ section.settings.mobile_content_padding }}px;
      
      {% comment %} Mobile positioning {% endcomment %}
      {% if section.settings.mobile_content_position == 'center' %}
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        right: auto;
        bottom: auto;
      {% elsif section.settings.mobile_content_position == 'top' %}
        top: {{ section.settings.mobile_vertical_offset }}%;
        left: 50%;
        transform: translateX(-50%);
        right: auto;
        bottom: auto;
      {% elsif section.settings.mobile_content_position == 'bottom' %}
        bottom: {{ section.settings.mobile_vertical_offset }}%;
        left: 50%;
        transform: translateX(-50%);
        right: auto;
        top: auto;
      {% endif %}
    }

    .hero-banner-{{ section.id }} .banner-heading {
      font-size: {{ section.settings.heading_size_mobile }}px;
      margin-bottom: {{ section.settings.mobile_heading_margin }}px;
    }

    .hero-banner-{{ section.id }} .banner-subheading {
      font-size: {{ section.settings.subheading_size_mobile }}px;
      margin-bottom: {{ section.settings.mobile_subheading_margin }}px;
    }

    .hero-banner-{{ section.id }} .banner-description {
      font-size: {{ section.settings.description_size_mobile }}px;
      margin-bottom: {{ section.settings.mobile_description_margin }}px;
    }

    .hero-banner-{{ section.id }} .banner-button {
      font-size: {{ section.settings.button_font_size_mobile }}px;
      padding: {{ section.settings.button_padding_mobile_vertical }}px {{ section.settings.button_padding_mobile_horizontal }}px;
    }
  }

  /* Animation */
  {% if section.settings.enable_animation %}
  .hero-banner-{{ section.id }} .banner-content {
    animation: fadeInUp{{ section.id }} {{ section.settings.animation_duration }}s ease-out;
  }

  @keyframes fadeInUp{{ section.id }} {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  {% endif %}
</style>

<section class="hero-banner-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="banner-image-wrapper">
    {% if section.settings.desktop_image != blank %}
      <img 
        src="{{ section.settings.desktop_image | image_url: width: 2000 }}"
        srcset="{{ section.settings.desktop_image | image_url: width: 768 }} 768w,
                {{ section.settings.desktop_image | image_url: width: 1024 }} 1024w,
                {{ section.settings.desktop_image | image_url: width: 1440 }} 1440w,
                {{ section.settings.desktop_image | image_url: width: 2000 }} 2000w"
        alt="{{ section.settings.desktop_image.alt | escape }}"
        class="banner-image desktop-image"
        loading="{{ section.settings.image_loading }}"
        width="{{ section.settings.desktop_image.width }}"
        height="{{ section.settings.desktop_image.height }}"
      >
    {% else %}
      <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); width: 100%; height: 100%; min-height: {{ section.settings.desktop_height }}px;"></div>
    {% endif %}

    {% if section.settings.mobile_image != blank %}
      <img 
        src="{{ section.settings.mobile_image | image_url: width: 800 }}"
        srcset="{{ section.settings.mobile_image | image_url: width: 375 }} 375w,
                {{ section.settings.mobile_image | image_url: width: 768 }} 768w"
        alt="{{ section.settings.mobile_image.alt | escape }}"
        class="banner-image mobile-image"
        loading="{{ section.settings.image_loading }}"
        width="{{ section.settings.mobile_image.width }}"
        height="{{ section.settings.mobile_image.height }}"
      >
    {% endif %}

    {% if section.settings.show_overlay %}
      <div class="banner-overlay"></div>
    {% endif %}
  </div>

  <div class="banner-content">
    {% if section.settings.subheading != blank %}
      <p class="banner-subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    {% if section.settings.heading != blank %}
      <{{ section.settings.heading_tag }} class="banner-heading">
        {{ section.settings.heading }}
      </{{ section.settings.heading_tag }}>
    {% endif %}

    {% if section.settings.description != blank %}
      <div class="banner-description">
        {{ section.settings.description }}
      </div>
    {% endif %}

    {% if section.settings.button_text != blank %}
      <a 
        href="{{ section.settings.button_link | default: '#' }}" 
        class="banner-button"
        {% if section.settings.button_link == blank %}aria-disabled="true"{% endif %}
      >
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

