<style>
.logo-scroll-section {
  background-color: var(--bg-color);
  padding-top: var(--padding-top);
  padding-bottom: var(--padding-bottom);
  overflow: hidden;
}

.logo-scroll-container {
  max-width: 1600px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: var(--heading-width) 1fr;
  align-items: center;
  gap: 5;
}

.logo-scroll-heading {
  font-size: var(--heading-size);
  font-weight: 700;
  text-align: left;
  color: var(--heading-color);
  margin: 0;
  padding: 0 2rem 0 2rem;
  line-height: 1.3;
  white-space: normal;
  word-wrap: break-word;
  display: flex;
  align-items: center;
}

.logo-scroll-wrapper {
  width: 100%;
  overflow: hidden;
  position: relative;
  mask-image: linear-gradient(
    to right,
    transparent 0%,
    black 3%,
    black 97%,
    transparent 100%
  );
  -webkit-mask-image: linear-gradient(
    to right,
    transparent 0%,
    black 3%,
    black 97%,
    transparent 100%
  );
}

.logo-scroll-track {
  display: flex;
  width: fit-content;
  animation: scroll-left var(--scroll-speed) linear infinite;
  will-change: transform;
}

.logo-scroll-track[data-pause-hover="true"]:hover {
  animation-play-state: paused;
}

.logo-scroll-items {
  display: flex;
  align-items: center;
  gap: 3rem;
  padding: 1rem 0;
  flex-shrink: 0;
}

.logo-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  height: var(--logo-height);
  transition: transform 0.3s ease, opacity 0.3s ease;
}

.logo-item:hover {
  transform: scale(1.05);
}

.logo-item img {
  height: 100%;
  width: auto;
  max-width: 200px;
  object-fit: contain;
  filter: grayscale(0%);
  transition: filter 0.3s ease;
}

.logo-item a {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  text-decoration: none;
}

.logo-item img {
  filter: grayscale(0%) brightness(1);
}

.logo-scroll-track:hover .logo-item img {
  filter: grayscale(0%) brightness(0.9);
}

.logo-scroll-track:hover .logo-item:hover img {
  filter: grayscale(0%) brightness(1);
}

@keyframes scroll-left {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

/* Responsive adjustments */
@media screen and (max-width: 768px) {
  .logo-scroll-container {
    grid-template-columns: 120px 1fr;
  }

  .logo-scroll-heading {
    padding: 0 1rem 0 1rem;
    font-size: 14px;
  }

  .logo-scroll-items {
    gap: 2rem;
  }

  .logo-item img {
    max-width: 120px;
  }
}

@media screen and (max-width: 480px) {
  .logo-scroll-container {
    grid-template-columns: 100px 1fr;
  }

  .logo-scroll-heading {
    padding: 0 0.5rem 0 0.5rem;
    font-size: 14px;
  }

  .logo-scroll-items {
    gap: 1.5rem;
  }
.logo-scroll-section{
padding: 10px;
}
  .logo-item img {
    max-width: 100px;
  }
}

/* Reduce motion for accessibility */
@media (prefers-reduced-motion: reduce) {
  .logo-scroll-track {
    animation: scroll-left-slow calc(var(--scroll-speed) * 2) linear infinite;
  }

  @keyframes scroll-left-slow {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
}
</style>

<div class="logo-scroll-section" style="
  --heading-color: {{ section.settings.heading_color }};
  --heading-size: {{ section.settings.heading_size }}px;
  --heading-width: {{ section.settings.heading_width }}px;
  --bg-color: {{ section.settings.background_color }};
  --logo-height: {{ section.settings.logo_height }}px;
  --scroll-speed: {{ section.settings.scroll_speed }}s;
  --padding-top: {{ section.settings.padding_top }}px;
  --padding-bottom: {{ section.settings.padding_bottom }}px;
">
  <div class="logo-scroll-container">
    {% if section.settings.heading != blank %}
      <h2 class="logo-scroll-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="logo-scroll-wrapper">
      <div class="logo-scroll-track" data-speed="{{ section.settings.scroll_speed }}" data-pause-hover="{{ section.settings.pause_on_hover }}">
        <!-- First set of logos -->
        <div class="logo-scroll-items">
          {% for block in section.blocks %}
            {% if block.settings.logo != blank %}
              <div class="logo-item" {{ block.shopify_attributes }}>
                {% if block.settings.link != blank %}
                  <a href="{{ block.settings.link }}" {% if block.settings.open_new_tab %}target="_blank" rel="noopener"{% endif %}>
                    <img 
                      src="{{ block.settings.logo | image_url: width: 400 }}"
                      alt="{{ block.settings.logo.alt | default: section.settings.heading }}"
                      loading="lazy"
                      width="{{ block.settings.logo.width }}"
                      height="{{ block.settings.logo.height }}"
                    >
                  </a>
                {% else %}
                  <img 
                    src="{{ block.settings.logo | image_url: width: 400 }}"
                    alt="{{ block.settings.logo.alt | default: section.settings.heading }}"
                    loading="lazy"
                    width="{{ block.settings.logo.width }}"
                    height="{{ block.settings.logo.height }}"
                  >
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>

        <!-- Duplicate set for seamless loop -->
        <div class="logo-scroll-items" aria-hidden="true">
          {% for block in section.blocks %}
            {% if block.settings.logo != blank %}
              <div class="logo-item">
                {% if block.settings.link != blank %}
                  <a href="{{ block.settings.link }}" {% if block.settings.open_new_tab %}target="_blank" rel="noopener"{% endif %} tabindex="-1">
                    <img 
                      src="{{ block.settings.logo | image_url: width: 400 }}"
                      alt="{{ block.settings.logo.alt | default: section.settings.heading }}"
                      loading="lazy"
                      width="{{ block.settings.logo.width }}"
                      height="{{ block.settings.logo.height }}"
                    >
                  </a>
                {% else %}
                  <img 
                    src="{{ block.settings.logo | image_url: width: 400 }}"
                    alt="{{ block.settings.logo.alt | default: section.settings.heading }}"
                    loading="lazy"
                    width="{{ block.settings.logo.width }}"
                    height="{{ block.settings.logo.height }}"
                  >
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  class LogoScroll {
    constructor(element) {
      this.track = element;
      this.init();
    }

    init() {
      this.adjustScrollSpeed();
      this.handleResize();
      this.handleAccessibility();
    }

    adjustScrollSpeed() {
      const items = this.track.querySelector('.logo-scroll-items');
      if (!items) return;

      const itemsWidth = items.offsetWidth;
      const speed = this.track.dataset.speed || 30;
      
      const pixelsPerSecond = itemsWidth / speed;
      this.track.style.setProperty('--scroll-speed', `${speed}s`);
    }

    handleResize() {
      let resizeTimer;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(() => {
          this.adjustScrollSpeed();
        }, 250);
      });
    }

    handleAccessibility() {
      const pauseOnHover = this.track.dataset.pauseHover === 'true';
      
      if (pauseOnHover) {
        const logoItems = this.track.querySelectorAll('.logo-item a, .logo-item img');
        
        logoItems.forEach(item => {
          item.addEventListener('focus', () => {
            this.track.style.animationPlayState = 'paused';
          });
          
          item.addEventListener('blur', () => {
            this.track.style.animationPlayState = 'running';
          });
        });
      }
    }
  }

  function initLogoScrolls() {
    const logoScrollTracks = document.querySelectorAll('.logo-scroll-track');
    logoScrollTracks.forEach(track => {
      new LogoScroll(track);
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initLogoScrolls);
  } else {
    initLogoScrolls();
  }

  if (window.Shopify && window.Shopify.designMode) {
    document.addEventListener('shopify:section:load', (event) => {
      const track = event.target.querySelector('.logo-scroll-track');
      if (track) {
        new LogoScroll(track);
      }
    });

    document.addEventListener('shopify:section:reorder', () => {
      initLogoScrolls();
    });
  }
})();
</script>

