{% comment %}
  Quote/Review Slider Section
  Features: Auto-sliding text, responsive design, full customizer controls
{% endcomment %}

<style>
  .quote-review-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .quote-review-container-{{ section.id }} {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .quote-review-wrapper-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ section.settings.column_gap }}px;
    align-items: center;
  }

  .quote-review-content-{{ section.id }} {
    position: relative;
    overflow: hidden;
    min-height: 300px;
  }

  .quote-review-subheading-{{ section.id }} {
    color: {{ section.settings.subheading_color }};
    font-size: {{ section.settings.subheading_size }}px;
    font-weight: {{ section.settings.subheading_weight }};
    margin-bottom: {{ section.settings.subheading_margin }}px;
    text-transform: {{ section.settings.subheading_transform }};
    letter-spacing: {{ section.settings.subheading_spacing }}px;
  }

  .quote-review-slides-{{ section.id }} {
    position: relative;
  }

  .quote-review-slide-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    transition: opacity {{ section.settings.transition_speed }}ms ease-in-out;
    pointer-events: none;
  }

  .quote-review-slide-{{ section.id }}.active {
    opacity: 1;
    position: relative;
    pointer-events: auto;
  }

  .quote-review-heading-{{ section.id }} {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    line-height: {{ section.settings.heading_line_height }};
    margin: 0;
    text-align: center;
  }

  .quote-review-image-wrapper-{{ section.id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .quote-review-image-wrapper-{{ section.id }} img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .quote-review-dots-{{ section.id }} {
    display: flex;
    gap: 5px;
    margin-top: 15px;
    justify-content: center;
  }

  .quote-review-dot-{{ section.id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: {{ section.settings.dot_inactive_color }};
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    padding: 0;
  }

  .quote-review-dot-{{ section.id }}.active {
    background-color: {{ section.settings.dot_active_color }};
    width: 20px;
    border-radius: 6px;
  }

  /* Responsive Design */
  @media screen and (max-width: 989px) {
    .quote-review-wrapper-{{ section.id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .quote-review-content-{{ section.id }} {
      order: {{ section.settings.mobile_order_text }};
    }

    .quote-review-image-wrapper-{{ section.id }} {
      order: {{ section.settings.mobile_order_image }};
    }

    .quote-review-heading-{{ section.id }} {
      font-size: {{ section.settings.heading_size_mobile }}px;
    }

    .quote-review-subheading-{{ section.id }} {
      font-size: {{ section.settings.subheading_size_mobile }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .quote-review-section-{{ section.id }} {
      padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
    }
  }
</style>

<div class="quote-review-section-{{ section.id }}">
  <div class="quote-review-container-{{ section.id }}">
    <div class="quote-review-wrapper-{{ section.id }}">
      
      <!-- Left Side: Text Content -->
      <div class="quote-review-content-{{ section.id }}">
        {% if section.settings.subheading != blank %}
          <p class="quote-review-subheading-{{ section.id }}">{{ section.settings.subheading }}</p>
        {% endif %}

        <div class="quote-review-slides-{{ section.id }}">
          {% for block in section.blocks %}
            <div class="quote-review-slide-{{ section.id }} {% if forloop.first %}active{% endif %}" 
                 data-slide-index="{{ forloop.index0 }}">
              <h2 class="quote-review-heading-{{ section.id }}">{{ block.settings.heading }}</h2>
            </div>
          {% endfor %}
        </div>

        <!-- Navigation Dots -->
        {% if section.settings.show_dots %}
          <div class="quote-review-dots-{{ section.id }}">
            {% for block in section.blocks %}
              <button class="quote-review-dot-{{ section.id }} {% if forloop.first %}active{% endif %}"
                      data-dot-index="{{ forloop.index0 }}"
                      aria-label="Go to slide {{ forloop.index }}">
              </button>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- Right Side: Image -->
      <div class="quote-review-image-wrapper-{{ section.id }}">
        {% if section.settings.image != blank %}
          <img 
            src="{{ section.settings.image | image_url: width: 1200 }}"
            srcset="{{ section.settings.image | image_url: width: 400 }} 400w,
                    {{ section.settings.image | image_url: width: 600 }} 600w,
                    {{ section.settings.image | image_url: width: 800 }} 800w,
                    {{ section.settings.image | image_url: width: 1200 }} 1200w"
            sizes="(max-width: 749px) 100vw, (max-width: 989px) 100vw, 50vw"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}">
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>

    </div>
  </div>
</div>

<script>
  (function() {
    const sectionId = '{{ section.id }}';
    const autoplay = {{ section.settings.autoplay }};
    const autoplaySpeed = {{ section.settings.autoplay_speed }};
    const pauseOnHover = {{ section.settings.pause_on_hover }};
    
    const slides = document.querySelectorAll(`.quote-review-slide-${sectionId}`);
    const dots = document.querySelectorAll(`.quote-review-dot-${sectionId}`);
    const container = document.querySelector(`.quote-review-content-${sectionId}`);
    
    let currentSlide = 0;
    let autoplayInterval;
    let isPaused = false;

    function showSlide(index) {
      // Remove active class from all slides and dots
      slides.forEach(slide => slide.classList.remove('active'));
      dots.forEach(dot => dot.classList.remove('active'));
      
      // Add active class to current slide and dot
      if (slides[index]) {
        slides[index].classList.add('active');
      }
      if (dots[index]) {
        dots[index].classList.add('active');
      }
      
      currentSlide = index;
    }

    function nextSlide() {
      if (isPaused) return;
      const next = (currentSlide + 1) % slides.length;
      showSlide(next);
    }

    function startAutoplay() {
      if (autoplay && slides.length > 1) {
        autoplayInterval = setInterval(nextSlide, autoplaySpeed);
      }
    }

    function stopAutoplay() {
      clearInterval(autoplayInterval);
    }

    // Dot click handlers
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        showSlide(index);
        stopAutoplay();
        startAutoplay();
      });
    });

    // Pause on hover
    if (pauseOnHover && container) {
      container.addEventListener('mouseenter', () => {
        isPaused = true;
      });
      
      container.addEventListener('mouseleave', () => {
        isPaused = false;
      });
    }

    // Initialize
    if (slides.length > 0) {
      showSlide(0);
      startAutoplay();
    }

    // Cleanup on theme editor reload
    document.addEventListener('shopify:section:unload', () => {
      stopAutoplay();
    });
  })();
</script>

